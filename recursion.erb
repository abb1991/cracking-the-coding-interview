
def basecase1(stairs)
  if stairs == 1
    return 1
  elsif stairs < 1
    return 0
  else
    a = basecase1(stairs - 1)
    b = basecase1(stairs - 2)
    c = basecase1(stairs - 3)
  end
  return a + b + c
end

